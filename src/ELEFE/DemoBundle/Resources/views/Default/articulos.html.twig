{# src/ELEFE/DemoBundle/Resources/views/Blog/show.html.twig #}
{% extends 'ELEFEDemoBundle::layout.html.twig' %}
{% block title %}
¡Artículos! :: {{ parent() }}
{% endblock title %}
{% block content %}
    {#El artíclo solicitado es: {{articulo}}#}

<h1>Listado de Articulos</h1>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Fecha de Creacion</th>
    </tr>
    {% for articulo in articulos %}
    <tr>
        <td>{{articulo.id}}</td>
        <td>{{articulo.title}}</td>
        <td>{{articulo.created}}</td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
